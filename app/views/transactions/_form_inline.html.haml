= form_for @transaction do |f|
  - if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    %legend Quick-add
    %div.large-3.columns
      = f.label :date
      = f.text_field :date, :value => Date.today.to_s(:short)
    %div.large-3.columns
      = f.label :amount
      = f.text_field :amount, :autofocus => true
    %div.large-3.columns
      = fields_for @transaction.build_category do |category_fields|
        = category_fields.label :category_name
        = category_fields.text_field :name
    %div.large-2.columns
      = f.label :direction
      = f.select :direction, ['Out', 'In']
    = f.submit 'Save', :class => "button small inline"
