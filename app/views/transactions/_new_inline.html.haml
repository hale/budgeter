= form_for transaction do |f|
  - if transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - transaction.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    %legend New transaction
    %div.row
      %div.large-2.columns
        = f.label :date
        = f.date_select :date, default: Date.today
      %div.large-2.columns
        = f.label :amount
        = f.text_field :amount
      %div.large-2.columns
        = f.label :direction
        = f.select :direction, ['In', 'Out']
      %div.large-4.columns
        = f.label :description
        = f.text_field :description
      = f.submit 'Save'
