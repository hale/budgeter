%h1
  Categories
  %small
    = link_to 'new', new_category_path

%table
  %tr
    %th Name
    %th Transaction count
    %th Monthly budget
    %th
    %th
    %th

  - @categories.each do |category|
    %tr
      %td= category.name
      %td= category.transactions.count
      %td= currency_symbol + category.budget
      %td= link_to 'Show', category
      %td= link_to 'Edit', edit_category_path(category)
      %td= link_to 'Destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }

= @categories.each do |category|
  %h2
    = link_to category.name.capitalize, category
    %small= link_to 'destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }

  = render category.transactions

